{
  "name": "blog-app-server",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx index.ts",
    "build": "esbuild index.ts --platform=node --bundle --format=esm --outdir=dist --external:bcryptjs --external:connect-mongo --external:dotenv --external:express --external:express-session --external:mongoose --external:multer --external:passport --external:passport-local --external:ws --external:zod --external:zod-validation-error",
    "start": "node dist/index.js",
    "check": "tsc"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "connect-mongo": "^5.1.0",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "mongoose": "^8.14.1",
    "multer": "^1.4.5-lts.2",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "ws": "^8.18.2",
    "zod": "^3.24.4",
    "zod-validation-error": "^3.4.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.16.11",
    "@types/passport": "^1.0.16",
    "@types/passport-local": "^1.0.38",
    "@types/ws": "^8.5.13",
    "esbuild": "^0.24.0",
    "tsx": "^4.19.4",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
